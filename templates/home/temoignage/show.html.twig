{% extends 'base.html.twig' %}

{% block title %}Témoignages
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
<section id="projects" class="projects section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Témoignages</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="blog-main">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        {% for temoignage in temoignages %}
                        <div class="col-md-6 col-sm-4 col-xs-12">
                            <!-- Single Post -->
                            <div class="single-blog slider">
                                <div class="blog-post">
                                    <div class="blog-head">
                                        <div class="">
                                            <div class="single-slide">
                                                <iframe width="700" height="400" src="{{temoignage.url}}"
                                                    title="YouTube video player" frameborder="0"
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                    allowfullscreen></iframe>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="blog-info text-center">
                                        <h5>{{ temoignage.title }}</h5>
                                        <p><strong>Entrepreneur</strong>: {{temoignage.entrepreneur.getFullName}}<br>
                                            <p><strong>Secteur</strong>:
                                                {{temoignage.entrepreneur.Categorie.activite.nom}}<br>
                                                <span><i
                                                        class="fa fa-calendar-o"></i>{{temoignage.createdAt| date('d-m-Y')}}</span>

                                    </div>
                                </div>
                            </div>
                            <!--/ End Single Post -->
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(temoignages) }}
</div>
</section>
<!--/ End Project -->

{% endblock %}