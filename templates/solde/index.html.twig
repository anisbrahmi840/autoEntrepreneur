{% extends 'base.html.twig' %}

{% block title %}Hello SoldeController!{% endblock %}

{% block body %}
<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="row text-center justify-content-center">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Mon solde</h1>
                </div>
            </div>
            <!-- Single Table -->
            <div class="col-md-6 col-sm-12 col-xs-12">
                <!-- Table List -->
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>Totale déclaré :</th>
                            <td>{{ totalDeclare }} DT</td>
                        </tr>
                        <tr>
                            <th>Totale déclaré cette année:</th>
                            <td>{{ totaleDeclareCetteAnnee }} DT</td>
                        </tr>
                        <tr>
                            <th>Totale payé</th>
                            <td>{{ totalePaye }} DT</td>
                        </tr>
                        <tr>
                            <th>Totale Payé cette année</th>
                            <td> {{ totalePayeCetteAnnee }} DT</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
</section>
{% endblock %}