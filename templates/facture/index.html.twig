{% extends 'base.html.twig' %}

{% block title %}Liste de factures{% endblock %}

{% block body %}
<div class="container mb-5">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <h1 class="text-center">Liste de factutres</h1>
            <div class="row">
                <a href="{{ path('facture_new') }}" class="btn btn-primary">Ajouter une facture</a>
            </div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Client</th>
                        <th>DateFact</th>
                        <th>Mf</th>
                        <th>PrixTTC</th>
                        <th>PrixHT</th>
                        <th>Tva</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for facture in factures %}
                    <tr class="">
                        <td>{{ facture.id }}</td>
                        <td>{{ facture.client }}</td>
                        <td>{{ facture.dateFact ? facture.dateFact|date('Y-m-d') : '' }}</td>
                        <td>{{ facture.mf }}</td>
                        <td>{{ facture.prixTTC }} DT</td>
                        <td>{{ facture.prixHT }} DT</td>
                        <td>{{ facture.tva }}%</td>
                        <td>
                            <a href="{{ path('facture_show', {'id': facture.id}) }}"><i class="fa fa-file"></i></a>&nbsp;&nbsp;&nbsp;
                            <a href="{{ path('facture_edit', {'id': facture.id}) }}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8">Aucun enregistrement trouv√©</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}