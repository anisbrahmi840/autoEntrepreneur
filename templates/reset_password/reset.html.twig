{% extends 'base.html.twig' %}

{% block title %}Mot de passe oblié{% endblock %}

{% block body %}
<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Mot de passe oblié</h1>
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center ">
            <div class="col-md-6 col-sm-6 col-xs-12  header-inner">
                {{ form_start(resetForm) }}
                {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger mt-2" role="alert">{{ flashError }}</div>
                {% endfor %}
                <div class="col-md-12">
                    <div class="form-group">
                        {{ form_row(resetForm.plainPassword) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group text-center">
                        <button type="submit" class="btn primary">Réinitialiser </button>
                    </div>
                </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
