{% extends 'admin.html.twig' %}

{% block title %}Activite index{% endblock %}

{% block body %}
    <h1>Liste des activités</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Taux</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.nom }}</td>
                <td>{{ activite.taux }}</td>
                <td>
                    <a href="{{ path('activite_show', {'id': activite.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('activite_edit', {'id': activite.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('activite_new') }}">Ajouter une activité</a>
{% endblock %}
