{% extends 'admin.html.twig' %}

{% block title %}New Temoignage{% endblock %}

{% block body %}
<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Ajouter un témoignage</h1>
                </div>
            </div>
        </div>

        <div class="row justify-content-center ">
            <div class="col-md-6 col-sm-12 col-xs-12 bg-light shadow p-2">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="row justify-content-center">
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <button class="btn btn-primary">{{ button_label|default('Ajouter un témoignage') }}</button>
                    </div>
                </div>
            </div>
        </div>
</section>
{% endblock %}
