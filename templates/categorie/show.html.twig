{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Information professionnelle</h1>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ categorie.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Codepostale</th>
                        <td>{{ categorie.codepostale }}</td>
                    </tr>
                    <tr>
                        <th>Secteur d'activit√©</th>
                        <td>{{ categorie.activite.nom }}</td>
                    </tr>
                    <tr>
                        <th>Taux</th>
                        <td>{{ categorie.activite.taux }}%</td>
                    </tr>
                    <tr>
                        <th>Domicile</th>
                        <td>{{ categorie.domicile ? 'Non' : 'Oui' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}