{% extends 'admin.html.twig' %}

{% block title %}Liste d'entrepreneurs{% endblock %}

{% block body %}
    <h1>Liste d'entrepreneurs</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entrepreneur in entrepreneurs %}
            <tr>
                <td>{{ entrepreneur.email }}</td>
                <td>{{ entrepreneur.nom }}</td>
                <td>{{ entrepreneur.prenom }}</td>
                <td>{% if entrepreneur.etat %} <span class="fa fa-check-square text-success"></span> {% else %} <span class="fa fa-user-times text-danger"></span> {% endif %} </td>
                <td class="text-center">
                    <a href="{{ path('entrepreneur_show_admin', {'id': entrepreneur.id}) }}"><span class="fa fa-eye text-info"/>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouvÃ©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entrepreneur_new') }}" class="btn btn-primary">Ajouter Entrepreneur</a>
{% endblock %}
