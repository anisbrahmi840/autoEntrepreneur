{% extends 'base.html.twig' %}

{% block title %}Entrepreneur index{% endblock %}

{% block body %}
    <h1>Entrepreneur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entrepreneur in entrepreneurs %}
            <tr>
                <td>{{ entrepreneur.id }}</td>
                <td>{{ entrepreneur.email }}</td>
                <td>{{ entrepreneur.roles ? entrepreneur.roles|json_encode : '' }}</td>
                <td>{{ entrepreneur.password }}</td>
                <td>
                    <a href="{{ path('entrepreneur_show', {'id': entrepreneur.id}) }}">show</a>
                    <a href="{{ path('entrepreneur_edit', {'id': entrepreneur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entrepreneur_new') }}">Create new</a>
{% endblock %}
