{% extends 'base.html.twig' %}

{% block title %}Entrepreneur{% endblock %}

{% block body %}
<section class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <h2>{{ entrepreneur.nom }} {{ entrepreneur.prenom }}</h2>
                <ul class="bread-list">
                    <li><a href="#">Etat<i class="fa fa-angle-right"></i></a></li>
                    <li class="active"><a href="#">{% if entrepreneur.etat %} Activé {% else %} non activé
                            {% endif %}</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- Start Pricing Table -->
<section id="pricing-table" class="pricing-table section">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Single Table -->
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="single-table">
                    <div class="bg-icon"><i class="fa fa-file"></i></div>
                    <!-- Table Head -->
                    <div class="table-head">
                        <h2 class="title">Informations personnelles</h2>
                    </div>
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <th>CIN:</th>
                                <td>{{ entrepreneur.cin }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone:</th>
                                <td>{{ entrepreneur.tel }} </td>
                            </tr>
                            <tr>
                                <th>Genre:</th>
                                <td>{{ entrepreneur.genre }}d</td>
                            </tr>
                            <tr>
                                <th>Date de naissance:</th>
                                <td>{{ entrepreneur.datenais | date('d-m-Y') }}</td>
                            </tr>
                            <tr>
                                <th>Pays:</th>
                                <td>Tunisie</td>
                            </tr>
                            <tr>
                                <th>Ville:</th>
                                <td>{{entrepreneur.villenais}} </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}