<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Déclaration</title>

    <style type="text/css">
        * {
            font-family: Verdana, Arial, sans-serif;
        }

        table {
            font-size: x-small;
        }

        tfoot tr td {
            font-weight: bold;
            font-size: x-small;
        }

        .gray {
            background-color: lightgray
        }

        h1 {
            text-align: center;
        }
    </style>

</head>

<body>
    <img width="130" height="130"
        src="https://scontent.ftun2-1.fna.fbcdn.net/v/t1.0-9/11206_617636068257478_545712743_n.jpg?_nc_cat=101&ccb=1-3&_nc_sid=973b4a&_nc_ohc=2J2u26ZaflQAX9-1ZKX&_nc_ht=scontent.ftun2-1.fna&oh=ce11306314ad2fbd554567f66e007152&oe=607683DD"
        alt="logo">
    <h1>Déclaration #{{ declaration.ref }}</h1>
    {% if declaration.paiement %}

        {% if declaration.paiement.etat and declaration.paiement.etatEnt %}
            <h4 style="color:green; text-align: center;">Payé</h4>
        {% else %}
            <h4 style="color:red; text-align: center;">Payé non validé</h4>
        {% endif %}
        
    {% else %}
        <h4 style="color:red; text-align: center;">Non payé</h4>
    {% endif %}

    <table width="100%">
        <tr>
            <td><strong>Entrepreneur:</strong> {{ declaration.entrepreneur.prenom }} {{ declaration.entrepreneur.nom }}
            </td>
        </tr>

    </table>

    <br />

    <table width="100%">
        <thead style="background-color: lightgray;">
            <tr>
                <th>#</th>
                <th>Date de déclaration</th>
                <th>Date de exigibilité</th>
                <th>Date déc trimestre</th>
                <th>Chiffre d'affaire</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">#</th>
                <td>{{ declaration.dateDec ? declaration.dateDec|date('d-m-Y') : ''}}</td>
                <td>{{ declaration.dateEx ? declaration.dateEx|date('d-m-Y') : ''}}</td>
                <td>{{ declaration.dateCr ? declaration.dateDec|date('d-m-Y') : '' }}</td>
                <td align="right">{{ declaration.chiffre  }} DT</td>
            </tr>

        </tbody>

        <tfoot>
            <tr>
                <td colspan="3"></td>
                <td align="right">Total à payer</td>
                <td align="right">{{ declaration.totalapayer }}DT</td>
            </tr>
            <tr>
                <td colspan="3"></td>
                <td align="right">Pénalité</td>
                <td align="right">{{ declaration.penalite }}DT</td>
            </tr>
            <tr>
                <td colspan="3"></td>
                <td align="right">Cotisation</td>
                <td align="right" class="gray">{{ declaration.cotisation }}DT</td>
            </tr>
        </tfoot>
    </table>

</body>

</html>