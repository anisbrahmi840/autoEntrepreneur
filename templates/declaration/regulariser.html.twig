{% extends 'base.html.twig' %}

{% block title %}Declaration à régulariser{% endblock %}


{% block body %}
<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Mes déclarations à régulariser</h1>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="text-center">
                <tr>
                    <th>Réf</th>                    
                    <th>Date création</th>
                    <th>Date exigibilité</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                {% for declaration in declarations %}
                <tr>
                    <td>{{ declaration.ref }}</td>                    
                    <td>{{ declaration.dateCr ? declaration.dateCr|date('d-m-Y') : '' }}</td>
                    <td>{{ declaration.dateEx ? declaration.dateEx|date('d-m-Y') : '' }}</td>
                    <td>
                        <a href="{{ path('declaration_declarer', {'ref': declaration.ref}) }}"><strong><p>Déclarer maintenant</p></strong></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="9">Pas encore de déclaration à régulariser</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}