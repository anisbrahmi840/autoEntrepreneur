{% extends 'admin.html.twig' %}

{% block title %}Rendez-vous index{% endblock %}

{% block body %}
<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Liste des rendez-vous</h1>
                </div>
            </div>
        </div>
        {% if not rendezvous is empty %}

        <table class="table table-striped table-bordered shadow">
            <thead>
                <tr>
                    <th>Date de rendez-vous</th>
                    <th>Objet</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for rendezvou in rendezvous %}
                <tr>
                    <td>{{ rendezvou.daterendezvous ? rendezvou.daterendezvous|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ rendezvou.objet }}</td>
                    <td class="text-center">
                        <a href="{{ path('agent_rendezvous_edit', {'slug': rendezvou.slug}) }}">
                            <i class="fa fa-edit text-info"></i>
                        </a>
                    </td>
                </tr>

                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <tr>
            <td colspan="8">Aucun enregistrement trouv√©</td>
        </tr>
        {% endif %}


        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(rendezvous) }}
        </div>
    </div>
</section>
{% endblock %}